extend layout

block content
  h1 Dev tools
  
  if locals.message
    p
      strong #{ message }
  
  p
    a#home(href="/") Home
    
  if popit.is_master()
    h2 Hosting site
  
    form(action="/_dev/add_instance_to_master", method="post")
      | slug: 
      input(name="instance_slug")
      input#add_instance_to_master(type="submit", value="Add instance to master") 

  else
    h2 Instance site '#{popit.instance_name()}'
    
    form(action="/_dev/delete_instance_database", method="post")
      input#delete_instance_database(type="submit", value="Delete this instance's database")

    form(action="/_dev/load_test_fixture", method="post")
      input#load_test_fixture(type="submit", value="Load the testing fixture")
