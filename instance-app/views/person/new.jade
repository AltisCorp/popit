extend ../layout

block title
  | New Person

block content
  .page-header
    h1 Create a new person

  form(method="post", action="")
    #person_new_name
      label Name
      input(name="name", value=person.name)
      if errors.name
        span.error #{errors.name.type}

    if locals.require_slug
      p#person_new_slug
        label Slug
        input(name="slug", value=person.slug)
        span.help  Can't create one automatically from the name
        if errors.slug
          span.error #{errors.slug.type}

    input(type="submit", class="btn" value="Create new person")
