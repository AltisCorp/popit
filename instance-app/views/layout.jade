doctype 5

html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    link(href='/css/bootstrap.css', rel='stylesheet')
    
    block title
      title PopIt

    style
      body {
      padding: 60px 10px;
      }
  
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') 
            if locals.popit
              //- the popit_instance_name id is used in the test suite to check that the correct instance has been loaded
              span#popit_instance_name #{ locals.popit ? locals.popit.instance_name() : '' }
            else
              | PopIt Instance Server
          .nav-collapse
            ul.nav
              li
                a(href='/') Home
              li
                a(href='/person') People
              li
                if everyauth.loggedIn
                  a(href="/logout") logout #{user.email}
                else
                  a(href="/login") log in

    .container
      block content
        p Create a 'content' block in your template!

    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
