extend layout

block title
  | Instance Directory

block content
  .page-header
    h1 Instance Directory
  
  p
  if instances.length
    ul
      for instance in instances
        li
          a(id='instance-' + instance.slug, href="/instances/#{ instance.slug }") 
            | #{ instance.info.name || instance.slug }
          if instance.info.description
            p #{ instance.info.description }
  else
    p.error No instances have been created yet.
